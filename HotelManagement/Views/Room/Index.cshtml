@model IEnumerable<HotelManagement.Models.Room>
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Index</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/login/images/icons/favicon.ico" />
    <!--===============================================================================================-->

    <link href="~/Content/login/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/fonts/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/fonts/login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Content/login/css/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Content/login/css/hamburgers.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Content/login/css/animsition.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Content/login/css/select2.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Content/login/css/daterangepicker.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Content/login/css/util.css" rel="stylesheet" />
    <link href="~/Content/login/css/main.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body>
    <div class="block-30 block-30-sm item" style="background-image: url('../../Content/images/bg_2.jpg');" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-10">
                    <span class="subheading-sm">Rooms</span>
                    <h2 class="heading">Manage Rooms</h2>
                </div>
            </div>
        </div>
    </div>
    <div style="margin-top:50px; text-align:center;">
        <h2>Rooms</h2>
    </div>

    @{HotelManagement.Models.Users obj = (HotelManagement.Models.Users)Session["User"];}
    @if(obj.RoleID == 1)
    {
        <p>
        <p style="font-size:medium">
            Add
            <a href='@Url.Action("Add", "Room")'>
                <img src="@Url.Content("~/Content/images/add1.png")" />
            </a>
        </p>
        </p>
        <p>
        </p>
        <table class="table table-bordred table-striped table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoomID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TypeID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FloorNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxGuestNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomPrice)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FloorNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxGuestNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomDescription)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomPrice)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.RoomID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.RoomID })*@

                        <a href='@Url.Action("Edit", "Room",new { id=item.RoomID})'>
                            <img src='@Url.Content("~/Content/images/edit1.png")' />
                        </a>
                        |

                        <a href='@Url.Action("Delete", "Room",new {id=item.RoomID})'>
                            <img src='@Url.Content("~/Content/images/delete.png")' />
                        </a>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <table class="table table-bordred table-striped table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoomID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TypeID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FloorNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxGuestNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomDescription)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.RoomPrice)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FloorNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxGuestNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomDescription)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomPrice)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.RoomID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.RoomID })*@

                        <a href='@Url.Action("Edit", "Room",new { id=item.RoomID})' disabled="disabled" style="pointer-events:none;" >
                            <img src='@Url.Content("~/Content/images/edit1.png")' />
                        </a>
                        |

                        <a href='@Url.Action("Delete", "Room",new {id=item.RoomID})' disabled="disabled" style="pointer-events:none;">
                            <img src='@Url.Content("~/Content/images/delete.png")' />
                        </a>
                    </td>
                </tr>
            }

        </table>
    }





    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->

    <script src="~/Scripts/login/js/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/login/js/popper.js"></script>
    <script src="~/Scripts/login/js/animsition.min.js"></script>

    <!--===============================================================================================-->
