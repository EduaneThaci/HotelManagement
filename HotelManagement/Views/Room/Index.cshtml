    <script src="~/Scripts/login/js/moment.min.js"></script>

    <script src="~/Scripts/login/js/daterangepicker.js"></script>
    <!--===============================================================================================-->

    <script src="~/Scripts/login/js/countdowntime.js"></script>
    <!--===============================================================================================-->

    <script src="~/Scripts/login/js/main.js"></script>

</body>
</html>